Proceso main
	
	// Diagramar un algoritmo para que, dadas la base y altura de un rectángulo, informe su perímetro y su superficie
	Definir base, altura Como Real;
	//Ingreso de datos
	Escribir "Ingrese la base";
	Leer  base;
	Escribir "Ingrese la altura";
	Leer  altura;
	//Salida de datos
	Escribir "El perimetro es ",base*2+altura*2;
	Escribir "El area es ",base*altura;
	
FinProceso